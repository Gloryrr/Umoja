FROM ubuntu:latest

# Installer OpenSSH
RUN apt update && apt install -y openssh-server && rm -rf /var/lib/apt/lists/*

# Créer un utilisateur dédié au SFTP
RUN useradd -m sftpumodja && echo "sftpumodja:umodja" | chpasswd

# Configurer SSHD pour SFTP uniquement
RUN mkdir -p /etc/ssh
RUN echo '\
Match User sftpumodja\n\
    ForceCommand internal-sftp\n\
    PasswordAuthentication yes\n\
    ChrootDirectory /home/sftpumodja\n\
    PermitTunnel no\n\
    AllowAgentForwarding no\n\
    AllowTcpForwarding no\n\
    X11Forwarding no\n' >> /etc/ssh/sshd_config

# Créer le répertoire Chroot
RUN mkdir -p /home/sftpumodja/uploads && chown root:root /home/sftpumodja && chmod 755 /home/sftpumodja && \
    chown sftpumodja:sftpumodja /home/sftpumodja/uploads

# Créer le répertoire /run/sshd pour la séparation des privilèges
RUN mkdir -p /run/sshd && chown root:root /run/sshd

# Exposer le port SSH
EXPOSE 22

# Lancer le serveur SSH
CMD ["/usr/sbin/sshd", "-D"]
