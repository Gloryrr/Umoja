{
    "compilerOptions": {
      "target": "es6",
      "jsx": "react",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"],
    "files": ["src/main.ts"] // Add at least one input file here
}